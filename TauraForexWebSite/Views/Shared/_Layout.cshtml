<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <title>@ViewBag.Title - Train to Trade</title>
    <link href="@Url.Content("~/Content/Site.css")" rel="stylesheet" type="text/css" />
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.9.1/jquery.min.js"></script>
    <script src="~/Scripts/site.js"></script>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    
    <style>
        #secretDiv {
            display: none;
        }
    </style>

</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("Train-to-Trade", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink(" Home", "Index", "Home")</li>
                    <li>@Html.ActionLink("About", "About", "Home")</li>
                    <li>@Html.ActionLink("Courses", "Courses", "Home")</li>
                    <li>@Html.ActionLink("Contact", "Contact", "Home")</li>

                </ul>
                @Html.Partial("_LoginPartial")
            </div>
        </div>
    </div>
    <div class="container body-content">
        <div class="row">
            <div class="col-md-12 col-xs-12 banner-holder">
                <div id="tradeShow">
                    <img src="~/Content/images/banner/Trade_5.jpg" class="img-responsive center-block product-image" style="background-size: cover; width: 100%; height: 100%;" />
                    <div id="motivationQoute" class="plus-image text-success col-xs-6" style="color: black; font-family: -apple-system; padding: 5px;">Train To Trade
                    </div>
                </div>
                
            </div>
        </div>
        

        @RenderBody()
        <hr />
        <div class="row">
            <div class="col-lg-9">
                <footer>
                    <p>&copy; @DateTime.Now.Year -<a href="#">Softy-Soft Technologies</a></p>
                </footer>
            </div>
            <div class="col-lg-3">
                <div id="footer-bottom-social-icon">
                    <a href="#" target="_blank"><img src="~/Content/images/icons/faceBook.ico" ></a>
                    <a href="#" target="_blank"><img src="/images/new_design/twitter.png" ></a>
                    <a href="#" target="_blank"><img src="/images/new_design/youTube.ico" ></a>
                </div>
            </div>
        </div>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
<script>
    $(function () {
        count = 0;
        wordsArray = ["Action speaks louder  than words.......Book your slot now and start learning.", "Zeal without knowledge  is a runaway horse....let us educate you about forex trading", "An empty bag will not stand upright.....let us feed you with innovative financial solutions.", "knowledge is power...Get an edge.", "A penny saved is a penny gained....take control of your trading!", " Nothing succeeds  like success","Make hey while the sun shines...Join and get financial freedom"];
        setInterval(function () {
            count++;
            $("#motivationQoute").fadeOut(800, function () {
                $(this).text(wordsArray[count % wordsArray.length]).fadeIn(900);
            });
        }, 50000);
    });

    function myHidding() {
        var x = document.getElementById("secretDiv");
        if (x.style.display === "none") {
            x.style.display = "block";
        } else {
            x.style.display = "none";
        }
    }
</script>
   
</body>
</html>
