@model TauraForexWebSite.Models.ContactUsViewModel
@{
    ViewBag.Title = "Contact Us";
}
<h2>@ViewBag.Title.</h2>
<h3>For more information please do not hesitate to contact us or send us a message.</h3>

<div class="row col-lg-12 ">
    <hr />
</div>
<div class="row col-lg-12">
    <div class="col-lg-8 col-md-8 col-xs-12">
        <div class="row col-xs-12">
            <p>Please kindly complete the following form with your details and we will get back to you as soon as possible</p>
        </div>
        <h4>@ViewBag.Message</h4>
        @*@using (Html.BeginForm("index", "Contact", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
        {*@
    
        <div class="row container">
            <form method="post">
                @Html.AntiForgeryToken()

                @Html.ValidationSummary("", new { @class = "text-danger" })
                <div class="form-group">
                    @*@Html.LabelFor(m => m.Fullname, new { @class = "col-md-3 control-label" })*@
                    <div class="row">
                        <label class="col-md-3 control-label">Full name.:</label>
                        <div class="col-md-9">
                            @Html.TextBoxFor(m => m.Fullname, new { @class = "form-control" })
                        </div>
                    </div>
                </div>
                <div class="form-group">
                    <div class="row">
                        @*@Html.LabelFor(m => m.Email, new { @class = "col-md-3 control-label" })*@
                        <label class="col-md-3 control-label">Email.:</label>
                        <div class="col-md-9">
                            @Html.TextBoxFor(m => m.Email, new { @class = "form-control" })
                        </div>
                    </div>
                </div>
                <div class="form-group">
                    @*@Html.LabelFor(m => m.ContactNumber, new { @class = "col-md-3 control-label" })*@
                    <div class="row">
                        <label class="col-md-3 control-label">Contact No.:</label>
                        <div class="col-md-9">
                            @Html.TextBoxFor(m => m.ContactNumber, new { @class = "form-control" })
                        </div>
                    </div>
                </div>

                <div class="form-group">
                    <div class="row">
                        @*@Html.LabelFor(m => m.Message, new { @class = "col-md-3 control-label" })*@
                        <label class="col-md-3 control-label">Message</label>
                        <div class="col-md-9">
                            <textarea name="message" class="form-control"></textarea>
                            @*@Html.TextAreaFor(m => m.Message, new { @class = "form-control" })*@
                        </div>
                    </div>
                </div>
                <div class="form-group">
                    <div class="row">
                        <div class="col-md-offset-3 col-md-9">
                            <input type="submit" class="btn btn-default" value="Send Message" />
                        </div>
                    </div>
                </div>
            </form>
        </div>
    </div>

    <!--Contact details-->

    <div class="col-lg-4 col-md-4 col-xs-12">
        <address>
            No 13 Durban road<br />
            Benola,<br /> 4001<br />
            <abbr title="Phone">Cell No.:</abbr>
            +27 (0) 65 822 3164
        </address>

        <address>
            <strong>Support:</strong>   <a href="#">taumarch@gmail.com</a><br />
            <strong>Marketing:</strong> <a href="#">taurais@cti.co.za</a>
        </address>
    </div>
</div>
